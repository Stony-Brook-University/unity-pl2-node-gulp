<section class="hero-modern overlay-dark-gray">

  {{# shownav }}
    <div class="hero-modern--navigation">
          <div class="container">
              <div class="row">

                {{# navbuttons }}
                  <div class="col-sm-6 col-md-4 col-lg-4">
                      <a class="sky-button button-block" data-match-height="hero-button" href="{{url}}">{{headline.x-small}}</a>
                  </div>
                {{/ navbuttons }}



              </div>
          </div>
      </div>
  {{/ shownav }}

  <div class="hero-modern--content">
  <div class="container">
    <div class="row">
      <div class="col-sx-12 col-sm-12 col-md-12">

          <h1 class="hero-modern--heading animated fadeInDown white">{{headline.medium}}</h1>
            <div class="hero-modern--text">
              {{{paragraph.double}}}
            </div>
      </div>
    </div>
  </div>
  </div>
  {{# showbuttons }}
  <div class="hero-modern--buttons">
    <div class="container">
    <div class="row">
      {{# buttons }}
      <div class="col-sm-12 col-md-6">
        <a data-match-height="hero-buttons" class="hero-button block text-center" href="{{url}}">{{headline.short}}</a>
      </div>
      {{/ buttons }}
    </div>
  </div>
  </div>
  {{/ showbuttons }}
</section>
